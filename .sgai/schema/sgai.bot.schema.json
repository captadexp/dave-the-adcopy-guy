{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "model": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "prompt": {
      "type": "string"
    },
    "is_public": {
      "type": "boolean"
    },
    "rag_enabled": {
      "type": "boolean"
    },
    "seo_graphic": {
      "type": "string",
      "format": "uri"
    },
    "slug": {
      "type": "string"
    },
    "listing_config": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "categories": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title",
        "tags",
        "categories"
      ]
    },
    "ui_config": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "launcher": {
          "type": "object",
          "properties": {
            "openBtn": {
              "type": "string",
              "format": "uri"
            },
            "color": {
              "type": "string"
            },
            "closeBtn": {
              "type": "string",
              "format": "uri"
            }
          },
          "required": [
            "openBtn",
            "color",
            "closeBtn"
          ]
        },
        "bot_name": {
          "type": "string"
        },
        "first_msg": {
          "type": "string"
        },
        "chat_window": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "color",
        "launcher",
        "bot_name",
        "first_msg",
        "chat_window"
      ]
    }
  },
  "required": [
    "model",
    "name",
    "is_public",
    "rag_enabled",
    "seo_graphic",
    "slug",
    "listing_config",
    "ui_config"
  ]
}
